typedef struct {
    int x,y,w,h;
    char title[32];
    int minimized;
} Window;

Window windows[16];
int window_count=0;

void init_window_manager() { window_count=0; }
void open_window(const char* title,int x,int y,int w,int h){
    if(window_count>=16) return;
    Window* wptr=&windows[window_count++];
    wptr->x=x; wptr->y=y; wptr->w=w; wptr->h=h;
}
void draw_windows() {
    for(int i=0;i<window_count;i++){
        draw_window(windows[i].x, windows[i].y, windows[i].w, windows[i].h);
        draw_text(windows[i].x+2,windows[i].y+1,windows[i].title);
    }
}
